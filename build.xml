<?xml version="1.0"?>
<project name = "lab3" default = "build" basedir=".">
    <property file = "build.properties"/>
    <target name = "clean">
        <echo>Remove all the files that were compiled earlier in classes</echo>
        <delete dir="${target.dir}"/>
        <delete dir="${build.dir}"/>
    </target>

    <target name = "init" depends="clean">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${target.dir}"/>
        <mkdir dir="${classes.dir}"/>
    </target>
    <target name = "compile" depends="init">
        <echo>Your project is compiled.</echo>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" includeantruntime="true">
            <classpath>
                <fileset dir="${lib.dir}" includes="*.jar"/>
            </classpath>
        </javac>
    </target>
</project>